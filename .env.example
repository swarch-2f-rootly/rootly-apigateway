# Server Configuration
HOST=0.0.0.0
PORT=8080
GIN_MODE=debug
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOW_ALL_ORIGINS=true

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
API_KEY_HEADER=X-API-Key

# Service URLs (for local development)
ANALYTICS_SERVICE_URL=http://localhost:8002
AUTH_SERVICE_URL=http://localhost:8001
DATA_MANAGEMENT_SERVICE_URL=http://localhost:8002
PLANT_MANAGEMENT_SERVICE_URL=http://localhost:8004

# Service Timeouts
ANALYTICS_SERVICE_TIMEOUT=10s
AUTH_SERVICE_TIMEOUT=10s
DATA_MANAGEMENT_SERVICE_TIMEOUT=10s
PLANT_MANAGEMENT_SERVICE_TIMEOUT=10s

# Configuration File Path
CONFIG_FILE=/etc/rootly/config.yaml

# GraphQL Configuration
GRAPHQL_PLAYGROUND_ENABLED=true
GRAPHQL_INTROSPECTION_ENABLED=true